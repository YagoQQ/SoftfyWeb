@model IEnumerable<SoftfyWeb.Modelos.Dtos.PlaylistDto>

@{
    ViewData["Title"] = "Álbumes del Artista";
    var email = ViewBag.Email as string ?? "Artista";
}

<h2 class="text-white">@ViewData["Title"]</h2>

@if (!Model.Any())
{
    <div class="alert alert-warning mt-4">
        No se encontraron playlists asociadas a este usuario.
    </div>
}
else
{
    <div class="row mt-4">
        @foreach (var playlist in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="artista-card">
                    <div class="playlist-info">
                        <h4 class="card-title">
                            <a href="@Url.Action("CancionesPublicasPorArtistaPlaylist", "VistasPlaylists", new { id = playlist.Id })" class="text-decoration-none text-light">
                                @playlist.Nombre
                            </a>
                        </h4>
                        <p class="card-text">
                            Total de Canciones: <strong>@playlist.TotalCanciones</strong>
                        </p>
                        @if (!string.IsNullOrEmpty(playlist.NombreArtistico))
                        {
                            <p class="card-text">
                                Propietario:
                                <a href="@Url.Action("VerPerfilpublico", "VistasAuth", new { id = playlist.ArtistaId })" class="text-decoration-none text-info">
                                    @playlist.NombreArtistico
                                </a>
                            </p>
                        }
                        <a href="@Url.Action("CancionesPublicasPorArtistaPlaylist", "VistasPlaylists", new { id = playlist.Id })" class="btn btn-outline-light mt-2">
                            Ver Canciones
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
