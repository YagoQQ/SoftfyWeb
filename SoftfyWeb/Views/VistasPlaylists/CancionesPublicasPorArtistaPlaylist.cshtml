@model List<SoftfyWeb.Modelos.Dtos.PlaylistCancionDto>

@{
    ViewData["Title"] = "Canciones de la Playlist";
    var esPremium = User.IsInRole("OyentePremium");
    var esFree = User.IsInRole("Oyente");
}

<h2 class="text-center mb-4">Canciones de Album</h2>

@if (Model != null && Model.Any())
{
    <div class="container">
        <div class="row">
            @foreach (var cancion in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card bg-dark text-white shadow-lg" style="border-radius: 12px;">
                        <div class="card-body">
                            <h5 class="card-title text-center">@cancion.Titulo</h5>                            
                            <div class="audio-player text-center mb-2" data-id="@cancion.Id">
                                <div class="player-controls d-flex align-items-center justify-content-center gap-2">
                                    <button class="btn btn-light btn-sm play-pause" data-id="@cancion.Id">▶️</button>
                                    <span class="time current">0:00</span>
                                    <input type="range" class="progress" value="0" step="1" style="width:100px;">
                                    <span class="time duration">0:00</span>

                                    @if (esPremium)
                                    {
                                        <a class="btn btn-success btn-sm download-btn" href="@cancion.UrlArchivo" download>
                                            ⬇️
                                        </a>
                                    }
                                </div>
                                <audio id="audio-@cancion.Id" src="@cancion.UrlArchivo"></audio>
                            </div>

                            <!-- Botones según rol -->
                            <div class="d-flex justify-content-between mt-3">
                                @if (esFree || esPremium)
                                {
                                    <form asp-controller="VistasPlaylists" asp-action="DarMeGusta" method="post" class="d-inline">
                                        <input type="hidden" name="cancionId" value="@cancion.Id" />
                                        <button type="submit" class="btn btn-primary btn-sm"
                                                onclick="return confirm('¿Agregar esta canción a Me Gusta?');">
                                            ❤️ Me Gusta
                                        </button>
                                    </form>
                                }

                                @if (esPremium)
                                {
                                    <form asp-controller="VistasPlaylists" asp-action="GuardarEnPlaylist" method="get" class="d-inline">
                                        <input type="hidden" name="cancionId" value="@cancion.Id" />
                                        <button type="submit" class="btn btn-warning btn-sm">
                                            ➕ Guardar
                                        </button>
                                    </form>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}
else
{
    <div class="alert alert-warning mt-3 text-center">
        No hay canciones disponibles en esta playlist.
    </div>
}
