@model SoftfyWeb.Dtos.UsuarioLoginDto

@{
    ViewData["Title"] = "Iniciar sesión";
}

<div class="d-flex justify-content-center align-items-center vh-100 fondo-translucido">
    <div class="form-box">
        <h2 class="text-center text-white mb-4">Iniciar sesión</h2>

        <form method="post">
            <div class="mb-3">
                <input asp-for="Email" class="form-control" placeholder="Correo electrónico" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <input asp-for="Password" class="form-control" placeholder="Contraseña" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />

            <button type="submit" class="btn btn-success w-100 mb-2">Iniciar sesión</button>

            <div class="text-center">
                <p class="text-white">
                    ¿Olvidaste tu contraseña?
                    <a href="@Url.Action("ForgotPassword", "VistasAuth")" class="text-primary">Recupérala aquí</a>
                </p>
            </div>
        </form>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger text-center">
                @ViewBag.Error
            </div>
        }

        @if (ViewBag.LockoutError != null)
        {
            <div class="alert alert-warning text-center">
                @ViewBag.LockoutError
            </div>
        }
    </div>
</div>