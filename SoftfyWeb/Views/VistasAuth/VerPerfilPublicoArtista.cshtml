@{
    ViewData["Title"] = "Perfil público";
    string artistaId = ViewBag.ArtistaId as string;
    var canciones = ViewBag.Canciones as List<SoftfyWeb.Modelos.Dtos.CancionDto> ?? new List<SoftfyWeb.Modelos.Dtos.CancionDto>();
    var playlists = ViewBag.Playlists as List<SoftfyWeb.Modelos.Dtos.PlaylistDto> ?? new List<SoftfyWeb.Modelos.Dtos.PlaylistDto>();
    bool esPremium = User.IsInRole("OyentePremium");
    bool esFree = User.IsInRole("Oyente");
}

<style>
    body {
        background-color: #121212;
        color: white;
        font-family: 'Segoe UI', sans-serif;
    }

    .artist-section {
        position: relative;
        padding: 40px 20px;
        border-radius: 20px;
        margin-bottom: 40px;
        backdrop-filter: blur(10px);
        background: rgba(0, 0, 0, 0.5);
        box-shadow: 0 0 30px rgba(0, 255, 255, 0.2);
        overflow: hidden;
    }

        .artist-section::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: url('@ViewBag.FotoUrl');
            background-size: cover;
            background-position: center;
            filter: blur(10px) brightness(0.3);
            z-index: 0;
        }

    .artist-profile {
        display: flex;
        align-items: center;
        gap: 30px;
        position: relative;
        z-index: 1;
    }

    .artist-photo {
        width: 200px;
        height: 200px;
        border-radius: 50%;
        object-fit: cover;
        border: 5px solid #00ffff;
        box-shadow: 0 0 25px rgba(0, 255, 255, 0.6);
    }

    .artist-info h1 {
        font-size: 2.5rem;
        color: #00ffff;
        text-shadow: 0 0 10px rgba(0, 255, 255, 0.5);
    }

    .artist-info p {
        font-size: 1.2rem;
        margin: 5px 0;
        color: #e0e0e0;
    }

    .grid-container {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 20px;
        margin-top: 20px;
    }

    .card-custom {
        background: #1e1e2f;
        padding: 15px;
        border-radius: 10px;
        text-align: center;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.4);
        transition: transform 0.3s;
    }

        .card-custom:hover {
            transform: scale(1.05);
        }

    .btn-sm {
        margin: 2px;
    }
</style>

<div class="artist-section">
    <div class="artist-profile">
        <img src="@ViewBag.FotoUrl" alt="@ViewBag.NombreArtistico" class="artist-photo" />
        <div class="artist-info">
            <h1>@ViewBag.NombreArtistico</h1>
            <p><strong>Biografía:</strong> @ViewBag.Biografia</p>
            <p><strong>Email:</strong> @ViewBag.Email</p>
        </div>
    </div>
</div>

<!-- Canciones -->
<h2 class="text-center">Canciones de @ViewBag.NombreArtistico</h2>
@if (canciones.Any())
{
    <div class="grid-container">
        @foreach (var c in canciones)
        {
            <div class="card-custom">
                <h5>@c.Titulo</h5>

                <!-- Reproductor -->
                <div class="audio-player" data-id="@c.Id">
                    <div class="player-controls d-flex justify-content-center gap-2">
                        <button class="btn btn-light btn-sm play-pause" data-id="@c.Id">▶️</button>
                        <input type="range" class="progress" value="0" step="1" style="width:100px;">
                        @if (esPremium)
                        {
                            <a class="btn btn-success btn-sm download-btn" href="@c.UrlArchivo" download>⬇️</a>
                        }
                    </div>
                    <audio id="audio-@c.Id" src="@c.UrlArchivo"></audio>
                </div>

                <!-- Botones -->
                <div class="mt-2">
                    @if (esFree || esPremium)
                    {
                        <form asp-controller="VistasPlaylists" asp-action="DarMeGusta" method="post" class="d-inline">
                            <input type="hidden" name="cancionId" value="@c.Id" />
                            <button type="submit" class="btn btn-primary btn-sm">❤️ Me Gusta</button>
                        </form>
                    }

                    @if (esPremium)
                    {
                        <form asp-controller="VistasPlaylists" asp-action="GuardarEnPlaylist" method="get" class="d-inline">
                            <input type="hidden" name="cancionId" value="@c.Id" />
                            <button type="submit" class="btn btn-warning btn-sm">➕ Guardar</button>
                        </form>
                    }
                </div>
            </div>
        }
    </div>
}
else
{
    <p class="text-center text-muted">No hay canciones disponibles.</p>
}

@if (playlists.Any())
{
    <h2 class="text-center mt-5">Álbumes (Playlists) de @ViewBag.NombreArtistico</h2>
    <div class="grid-container">
        @foreach (var p in playlists)
        {
            <div class="card-custom">
                <h5>@p.Nombre</h5>
                <p><small>Canciones: @p.TotalCanciones</small></p>
                <a asp-controller="VistasPlaylists" asp-action="Detalle" asp-route-id="@p.Id" class="btn btn-info btn-sm">Ver Playlist</a>
            </div>
        }
    </div>
}
