@model IEnumerable<SoftfyWeb.Modelos.Plan>

@{
    ViewData["Title"] = "Planes Disponibles";
}

<h2>@ViewData["Title"]</h2>
<a asp-action="Create" class="btn btn-success mb-2">+ Crear nuevo plan</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Máx. Usuarios</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var plan in Model)
        {
            <tr>
                <td>@plan.Nombre</td>
                <td>$@plan.Precio</td>
                <td>@plan.MaxUsuarios</td>
                <td>
                    <a asp-action="Details" asp-route-id="@plan.Id" class="btn btn-info btn-sm">Detalles</a>
                    <a asp-action="Edit" asp-route-id="@plan.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Delete" asp-route-id="@plan.Id" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>