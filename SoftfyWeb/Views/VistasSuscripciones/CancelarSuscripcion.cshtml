﻿@{
ViewData["Title"] = "Cancelar Suscripción";
}
<h1>@ViewData["Title"]</h1>
<div class="alert alert-warning">
    <p>¿Estás seguro de que deseas cancelar tu suscripción? Esta acción no se puede deshacer y todos los miembros serán removidos.</p>
</div>
<form asp-action="CancelarSuscripcion" method="post">
    <button type="submit" class="btn btn-danger">Sí, cancelar suscripción</button>
    <a asp-action="Estado" class="btn btn-secondary">No, volver</a>
</form>